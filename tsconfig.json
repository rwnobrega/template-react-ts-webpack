{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strictNullChecks": true,
        "baseUrl": "src/project",
        "paths": {
            "project/*": [
                "src/project/*"
            ],
        }
    },
    "include": [
        "custom.d.ts",
        "./**/*.ts",
        "./**/*.tsx",
    ]
}
